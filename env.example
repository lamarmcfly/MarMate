# AI Assistant Platform - Environment Variables
# Copy this file to .env and modify the values as needed

# ==============================================
# Database Configuration
# ==============================================
POSTGRES_USER=ai_user
POSTGRES_PASSWORD=changeme_in_production
POSTGRES_DB=ai_platform

# ==============================================
# Redis Configuration
# ==============================================
REDIS_PASSWORD=changeme_in_production

# ==============================================
# n8n Configuration
# ==============================================
N8N_USER=admin
N8N_PASSWORD=changeme_in_production
N8N_HOST=localhost
N8N_PROTOCOL=http
N8N_ENCRYPTION_KEY=changeme_32_character_encryption_key
WEBHOOK_URL=http://localhost:5678

# ==============================================
# API Keys
# ==============================================
OPENAI_API_KEY=your_openai_api_key
GITHUB_TOKEN=your_github_personal_access_token

# ==============================================
# Frontend Configuration
# ==============================================
FRONTEND_URL=http://localhost:3000
VITE_API_BASE_URL=http://localhost:5678
VITE_WS_URL=ws://localhost:5678

# ==============================================
# Security & Deployment (Production)
# ==============================================
# NODE_ENV=production
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# ==============================================
# Optional: Email Notifications
# ==============================================
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=notifications@example.com
# SMTP_PASSWORD=your_smtp_password
# EMAIL_FROM=AI Assistant <notifications@example.com>
